pipeline {
    
    agent any

    options {             
         timeout(time: 30, unit: 'MINUTES')
    }
   
    triggers {
        pollSCM('* * * * *')
    }

    stages {
        stage('git') {
            steps {                
                git url:'https://github.com/UserRamya/spring-petclinic.git'
                   branch:'dev1'
            } 
            
        }
    

        stage('build') {
            step {
                sh 'mvn clean package'
                archiveArtifacts artifacts:'**/spring-petclinic-*jar'
            }
        }
    }

}